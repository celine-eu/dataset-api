{
  "name": "CELINE FastAPI DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [
    8070
  ],
  "postCreateCommand": "uv sync --all-extras",
  "postStartCommand": "uv run uvicorn src.main:app --host 0.0.0.0 --port 8070 --reload",
  "remoteEnv": {
    "PYTHONPATH": "/workspace"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python"
      }
    }
  }
}
